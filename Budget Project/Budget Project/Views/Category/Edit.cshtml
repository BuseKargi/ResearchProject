@model Budget_Project.Models.Category
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content-body">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3"></div>
                            <div class="col-lg-6">
                                <h4 class="card-title mb-4">Update Category</h4>

                                @using (Html.BeginForm("Edit", "Category", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {

                                    <div class="basic-form">
                                        <form>
                                            <div class="form-group row" hidden="hidden">
                                                <label class="col-sm-3 col-form-label">Id</label>
                                                <div class="col-sm-7">
                                                    <input type="text" class="form-control" name="Id" id="Name" value="@Model.Id" placeholder="ID">
                                                </div>
                                                <div class="col-sm-2">
                                                    <a href="#" id="nameMicrophoneBtn" class="btn btn-primary" >
                                                        <i class="fa fa-microphone"></i> 
                                                    </a>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-sm-3 col-form-label">Hesap Adı</label>
                                                <div class="col-sm-7">
                                                    <input type="text" class="form-control" name="Name" id="Name" required="required" value="@Model.Name" placeholder="Hesap Adı">
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-sm-3 col-form-label">Logo</label>
                                                <div class="col-sm-7">
                                                    <input type="file" name="LogoPath" id="LogoPath" class="form-control" onchange="showImagePreview(this)">
                                                </div>
                                                <div class="col-sm-2" id="modelImage">
                                                    @if (Model.Logo != null)
                                                    {
                                                        <img class="mr-3 circle-rounded" src="~/Assets/images/category/@Model.Logo" width="50" height="50" alt="@Model.Name">
                                                    }
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <div class="col-sm-3">Alt Kategori</div>
                                                <div class="col-sm-7">
                                                    @Html.DropDownList("ParentId", null, "Ana Kategori Seçin", htmlAttributes: new { @class = "form-control",@required="required" })

                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-lg-3 col-form-label" for="val-email">
                                                    Aktif
                                                </label>
                                                <div class="col-lg-7">
                                                    <div class="form-check form-check-inline">
                                                        <label class="form-check-label">
                                                            @Html.CheckBox("IsActive", Model.IsActive)
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <div class="col-sm-10">
                                                    <button type="submit" class="btn btn-primary">Update</button>
                                                    <a class="btn btn-dark" href="/Category">Back</a>
                                                </div>
                                            </div>
                                        </form>
                                    </div>

                                }

                            </div>
                        </div>
                        <div class="col-lg-3"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>

document.getElementById('nameMicrophoneBtn').addEventListener('click', function() {
    startRecognition('Name','input');
});

document.getElementById('parentMicrophoneBtn').addEventListener('click', function () {
    startRecognition('ParentId','select-category');
});

function startRecognition(inputId, inputType) {
    const recognition = new webkitSpeechRecognition();
    recognition.lang = 'tr-TR';
    
    recognition.onstart = function () {
        if (inputType === 'select-category') {
            showDropdown('ParentId');
        }
    };
    
    
    recognition.onresult = function (event) {
        const transcript = event.results[0][0].transcript;
    
        if (inputType === 'input') {
            $('#' + inputId).val(transcript);
        } else if (inputType === 'select-category') {
            selectCategory(transcript);
        }
    };
    
    recognition.onend = function () {
        if (inputType === 'select-category') {
            hideDropdown('ParentId');
        }
    };
    
    recognition.start();
}
    
function selectCategory(transcript) {
    const dropdown = document.getElementById('ParentId');
    let categoryFound = false;

    for (let i = 0; i < dropdown.options.length; i++) {
        if (dropdown.options[i].text.toLowerCase() === transcript.toLowerCase()) {
            dropdown.selectedIndex = i;
            categoryFound = true;
            break;
        }
    }

    if (!categoryFound) {
        toastr.warning("We didn't understand you.", "Warning!");
    }
}

function showDropdown(dropdownId) {
    const dropdown = document.getElementById(dropdownId);
    dropdown.classList.add('open');
}

function hideDropdown(dropdownId) {
    const dropdown = document.getElementById(dropdownId);
    dropdown.classList.remove('open');
}

function showImagePreview(input) {
    var fileInput = input;
    var imagePreview = document.getElementById('imagePreview');
    var modelImage = document.getElementById('modelImage');

    if (fileInput.files && fileInput.files[0]) {
        var reader = new FileReader();

        reader.onload = function (e) {
            imagePreview.src = e.target.result;
            imagePreview.style.display = 'block';
            modelImage.style.display = 'none';
        };

        reader.readAsDataURL(fileInput.files[0]);
    }
}

</script>

