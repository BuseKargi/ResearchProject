@model Budget_Project.Models.Category
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content-body">

    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3"></div>
                            <div class="col-lg-6">
                                <h4 class="card-title mb-4">Update Account</h4>

                                @using (Html.BeginForm("Edit", "Category", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {

                                    <div class="basic-form">
                                        <form>
                                            <div class="form-group row" hidden="hidden">
                                                <label class="col-sm-3 col-form-label">Id</label>
                                                <div class="col-sm-9">
                                                    <input type="text" class="form-control" name="Id" id="Name" value="@Model.Id" placeholder="ID">
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-sm-3 col-form-label">Hesap Adı</label>
                                                <div class="col-sm-9">
                                                    <input type="text" class="form-control" name="Name" id="Name" value="@Model.Name" placeholder="Hesap Adı">
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-sm-3 col-form-label">Logo</label>
                                                <div class="col-sm-9">
                                                    @if (Model.Logo != null)
                                                    {
                                                        <img src="~/Assets/images/category/@Model.Logo" style="width:70px" class="img-circle" />
                                                    }
                                                    <input type="file" name="LogoPath" id="LogoPath" class="form-control"><br />
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <div class="col-sm-3">Alt Kategori</div>
                                                <div class="col-sm-9">
                                                    @Html.DropDownList("ParentId", null, "Ana Kategori Seçin", htmlAttributes: new { @class = "form-control" })

                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-lg-4 col-form-label" for="val-email">
                                                    Aktif
                                                </label>
                                                <div class="col-lg-6">
                                                    <div class="form-check form-check-inline">
                                                        <label class="form-check-label">
                                                            @Html.CheckBox("IsActive", Model.IsActive)
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <div class="col-sm-10">
                                                    <button type="submit" class="btn btn-dark">Güncelle</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>

                                }

                            </div>
                        </div>
                        <div class="col-lg-3"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


