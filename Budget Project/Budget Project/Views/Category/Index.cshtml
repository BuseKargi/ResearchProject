@model IEnumerable<Budget_Project.Models.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="content-body">

    <div class="container-fluid mt-3">
        <div class="row">

            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="button-icon">
                            <a href="/Category/Create" class="btn mb-1 btn-primary">
                                Yeni Kategori <span class="btn-icon-right"><i class="fa fa-plus"></i></span>
                            </a>
                        </div><hr />
                        <div class="card-title">
                            <h4>Kategoriler</h4>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Kategori</th>
                                        <th>Aktif/Pasif</th>
                                        <th>Tarih</th>
                                        <th>Ana/Alt Kategori</th>
                                        <th>Sil</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>
                                                <img src="~/Assets/images/category/@item.Logo" style="width:30px" class=" rounded-circle mr-3" alt="">
                                                @item.Name
                                            </td>
                                            @if (item.IsActive == true)
                                            {

                                                <td>Aktif</td>
                                            }
                                            else
                                            {

                                                <td>Aktif Değil</td>
                                            }
                                            <td>@item.ModifiedDate.Value.ToString("dd/MM/yyyy HH:mm") </td>
                                            @if (item.ParentId == 0)
                                            {
                                                <td class="color-primary">Ana Kategori</td>

                                            }
                                            else
                                            {
                                                <td class="color-primary">Alt Kategori</td>
                                            }
                                            <td>
                                                <span>
                                                    <a href="/Category/Edit/@item.Id" data-toggle="tooltip" data-placement="top" title="Düzenle">
                                                        <i class="fa fa-pencil color-muted m-r-5"></i>
                                                    </a>
                                                    <a href="/Category/Delete/@item.Id" data-toggle="tooltip" data-placement="top" title="Sil">
                                                        <i class="fa fa-close color-danger"></i>
                                                    </a>
                                                </span>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- /# card -->
            </div>
        </div>

    </div>
    <!-- #/ container -->
</div>

