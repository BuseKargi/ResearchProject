
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content-body">

    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3"></div>
                            <div class="col-lg-6">
                                <h4 class="card-title mb-4">Yeni Hesap</h4>

                                @using (Html.BeginForm("Create", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {

                                    <div class="basic-form">
                                        <form>
                                            <div class="form-group row">
                                                <label class="col-sm-3 col-form-label">Hesap Adı</label>
                                                <div class="col-sm-9">
                                                    <input type="text" class="form-control" name="Name" placeholder="Hesap Adı">
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-sm-3 col-form-label">Logo</label>
                                                <div class="col-sm-9">
                                                    <div class="custom-file">
                                                        <input type="file" class="custom-file-input" name="LogoPath">
                                                        <label class="custom-file-label">Logo Seç...</label>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="form-group row">
                                                <div class="col-sm-10">
                                                    <button type="submit" class="btn btn-dark">Ekle</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>

                                }

                            </div>
                        </div>
                        <div class="col-lg-3"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
