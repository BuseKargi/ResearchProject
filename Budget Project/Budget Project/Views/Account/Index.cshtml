@model IEnumerable<Budget_Project.Models.Account>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-body">

    <div class="container-fluid mt-3">
        <div class="row">

            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="button-icon">
                            <a href="/Account/Create" class="btn mb-1 btn-primary">
                                New Account <span class="btn-icon-right"><i class="fa fa-plus"></i></span>
                            </a>
                        </div><hr />
                        <div class="card-title">
                            <h4>Accounts</h4>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Name</th>
                                        <th>Logo</th>
                                        <th>Date of Arrangement</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <th>@item.Id</th>
                                            <td>@item.Name</td>
                                            @if (item.Logo != null)
                                            {
                                                <td>
                                                    <img class="mr-3 circle-rounded" src="~/Assets/images/account/@item.Logo" width="40" height="40" alt="Akbank">
                                                </td>
                                            }
                                            else
                                            {
                                                <td></td>
                                            }
                                            <td>@item.ModifiedDate.Value.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>
                                                <span>
                                                    <a href="/Account/Edit/@item.Id" data-toggle="tooltip" data-placement="top" title="Edit">
                                                        <i class="fa fa-pencil color-muted m-r-5"></i>
                                                    </a>
                                                    @* <a href="#/Account/Delete/@item.Id" data-toggle="tooltip" data-placement="top" title="Sil"> *@
                                                    <a href="#" onclick="removeAccount(@item.Id)" data-toggle="tooltip" data-placement="top" title="Remove">
                                                        <i class="fa fa-close color-danger"></i>
                                                    </a>
                                                </span>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<script>
    function removeAccount(itemId) {
        Swal.fire({
            title: 'Are you sure?',
            text: "Are you sure you want to delete this item?",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, Delete',
            cancelButtonText: 'Cancel'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    type: "POST",
                    url: "/Account/Delete/" + itemId,
                    success: function (response) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Successful',
                            text: 'The deletion was carried out'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                setTimeout(function() {
                                    location.reload(); 
                                });
                            }
                        });
                    },
                    error: function (error) {
                        alert("An error occurred during the deletion process");
                    }
                });
            }
        });
    }
</script>