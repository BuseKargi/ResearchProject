@model IEnumerable<MyBudget.Models.Account>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-body">

    <div class="container-fluid mt-3">
        <div class="row">

            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="button-icon">
                            <a href="/Account/Create" class="btn mb-1 btn-primary">
                                Yeni Hesap <span class="btn-icon-right"><i class="fa fa-plus"></i></span>
                            </a>
                        </div><hr />
                        <div class="card-title">
                            <h4>Hesaplar</h4>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Hesap Adı</th>
                                        <th>Logo</th>
                                        <th>Düzenleme Tarihi</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <th>@item.Id</th>
                                            <td>@item.Name</td>
                                            @if (item.Logo != null)
                                            {
                                                <td>
                                                    <img src="~/Assets/images/account/@item.Logo" class=" rounded-circle mr-3" width="30px" alt="">
                                                </td>
                                            }
                                            else
                                            {
                                                <td></td>
                                            }
                                            <td>@item.ModifiedDate.Value.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>
                                                <span>
                                                    <a href="/Account/Edit/@item.Id" data-toggle="tooltip" data-placement="top" title="Düzenle">
                                                        <i class="fa fa-pencil color-muted m-r-5"></i>
                                                    </a>
                                                    <a href="/Account/Delete/@item.Id" data-toggle="tooltip" data-placement="top" title="Sil">
                                                        <i class="fa fa-close color-danger"></i>
                                                    </a>
                                                </span>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- /# card -->
            </div>
        </div>

    </div>
    <!-- #/ container -->
</div>

