@model IEnumerable<Budget_Project.Models.Transaction>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-body">

    <div class="container-fluid mt-3">
        <div class="row">

            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="button-icon">
                            <a href="/Transaction/Create" class="btn mb-1 btn-primary">
                                Yeni Islem <span class="btn-icon-right"><i class="fa fa-plus"></i></span>
                            </a>

                            @if (ViewBag.IsDownloadExcel == true)
                            {
                                <a href="#" id="download-excel" class="btn mb-1 btn-primary">
                                    Örnek Excel İndir<span class="btn-icon-right"><i class="fa fa-file-excel-o"></i></span>
                                </a>
                                
                                <button type="button" class="btn mb-1 btn-primary" data-toggle="modal" data-target="#importExcelModal">
                                    Excel'i İçeri Aktar
                                    <span class="btn-icon-right"><i class="fa fa-plus-circle"></i></span>
                                </button>
                                <div class="modal fade" id="importExcelModal">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">Excel'i İçeri Aktar</h5>
                                                <button type="button" class="close" data-dismiss="modal"><span>&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                <div class="custom-file">
                                                    <input type="file" id="fileInput" class="custom-file-input" accept=".xlsx, .xls">
                                                    <label class="custom-file-label">Dosya Seç</label>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                                                <a href="#" id="uploadButton" class="btn btn-primary">
                                                    Yükle
                                                </a>
                                                
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <a href="#" class="btn mb-1 btn-primary" disabled>
                                    Örnek Excel İndir<span class="btn-icon-right"><i class="fa fa-file-excel-o"></i></span>
                                </a>

                                <a href="#" class="btn mb-1 btn-primary" disabled>
                                    Excel'i İçeri Aktar <span class="btn-icon-right"><i class="fa fa-plus-circle"></i></span>
                                </a>
                            }
                            


                        </div>
                        <hr />
                        <div class="card-title">
                            <h4>Islemler</h4>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Islem</th>
                                        <th>Aciklama</th>
                                        <th>Hesap</th>
                                        <th>Kategori</th>
                                        <th>Tarih</th>
                                        <th>Tutar</th>
                                        <th>Edit</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <th>@item.Id</th>
                                            <td>@item.Name</td>
                                            <td>@item.Description</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.Account.Logo))
                                                {
                                                    <img class="mr-3 circle-rounded" src="~/Assets/images/account/@item.Account.Logo" width="30" height="30" alt="Akbank">
                                                }
                                                @item.Account.Name
                                            </td>
                                            <td><span class="badge badge-primary px-2">@item.Category.Name</span></td>
                                            <td>@item.ModifiedDate.Value.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td class="color-primary">@item.Amount</td>
                                            <td>
                                                <span>
                                                    <a href="/Transaction/Edit/@item.Id" data-toggle="tooltip" data-placement="top" title="Edit"><i class="fa fa-pencil color-muted m-r-5"></i> </a>
                                                    <a href="#" onclick="removeTransaction(@item.Id)" data-toggle="tooltip" data-placement="top" title="Delete"><i class="fa fa-close color-danger"></i></a>
                                                </span>
                                            </td>

                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- /# card -->
            </div>
        </div>

    </div>
    <!-- #/ container -->
</div>

<script>
$(document).ready(function() {
    $('#download-excel').on('click', function() {
        window.location = '/Transaction/ExportExcel'; 
    });
    
    $('#uploadButton').on('click', function () {
        const fileInput = document.getElementById('fileInput');
        const file = fileInput.files[0];
        
        const formData = new FormData();
        formData.append('file', file);
    
        $.ajax({
            url: '@Url.Action("UploadFile", "Transaction")',
            type: 'POST',
            data: formData,
            processData: false,
            contentType: false,
            success: function (data) 
            {
                $('#importExcelModal').modal('hide');
                if (data.success === true){
                    if (data.errors.length > 0) {
                        data.errors.forEach(function (error) {
                            const titleMessage = error.Title + " Kayıt Eklenmedi";
                            const errorMessage = error.Type;
                            toastr["warning"](titleMessage, errorMessage)
                        });
                    }
                    
                    Swal.fire({
                            icon: 'success',
                            title: 'Başarılı',
                            text: data.message
                        }).then((result) => {
                            if (result.isConfirmed) {
                                setTimeout(function() {
                                    location.reload(); 
                                }, 1500);
                            }
                        });
                }
                
                if (data.success === false){
                    Swal.fire({
                        icon: 'error',
                        title: 'Hata' ,
                        text: data.message
                    });                  
                }
            },
            error: function (xhr, status, error) {
                $('#importExcelModal').modal('hide');
                console.error(error);
            }
        });
    });
});

 function removeTransaction(itemId) {
        Swal.fire({
            title: 'Are you sure?',
            text: "Are you sure you want to delete this item?",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, Delete',
            cancelButtonText: 'Cancel'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    type: "POST",
                    url: "/Transaction/Delete/" + itemId,
                    success: function (response) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Successful',
                            text: 'The deletion was carried out'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                setTimeout(function() {
                                    location.reload(); 
                                });
                            }
                        });
                    },
                    error: function (error) {
                        alert("An error occurred during the deletion process");
                    }
                });
            }
        });
    }
</script>