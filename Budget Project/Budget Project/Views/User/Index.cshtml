@using Budget_Project.Infrastructure
@model Budget_Project.Models.User
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-body">

    <!-- row -->

    <div class="container-fluid">
        <div class="row">

            <div class="col-lg-2 col-xl-2">

                <div class="card">
                    <div class="card-body">
                        <div class="media align-items-center mb-4">
                            @if (string.IsNullOrEmpty(Model.ProfileImage))
                            {
                                <img class="mr-3" src="~/Assets/images/user/@Model.ProfileImage" width="80" height="80" alt="">
                            }
                            else
                            {
                                <img class="mr-3" src="~/Assets/images/user/user-avatar.jpg" width="80" height="80" alt="">
                            }

                            <div class="media-body">
                                <h3 class="mb-0">@Model.Fullname</h3>
                                <p class="text-muted mb-0">@Model.Email</p>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <div class="card card-profile text-center">
                                    <span class="mb-1 text-primary"><i class="fa fa-money"></i></span>
                                    <h3 class="mb-0">@ViewBag.totalExpense</h3>
                                    <p class="text-muted px-4">Total Expense</p>
                                </div>
                            </div>

                            <div class="col">
                                <div class="card card-profile text-center">
                                    <span class="mb-1 text-warning"><i class="fa fa-money"></i></span>
                                    @if (ViewBag.totalThisMonthExpense != "")
                                    {
                                        <h3 class="mb-0">@ViewBag.totalThisMonthExpense</h3>
                                    }
                                    else
                                    {
                                        <h3 class="mb-0">0 @Defaults.MoneyType</h3>
                                    }
                                    <p class="text-muted">@ViewBag.totalThisMonthName Expense</p>
                                </div>
                            </div>

                            <div class="col-12 text-center">
                                <a href="/User/Delete/@Model.Id" class="btn btn-danger px-5">Remove Account</a>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
            <div class="col-lg-10 col-xl-10">
                <div class="card">
                    <div class="card-body">
                        @if (ViewBag.transactions == null)
                        {
                            <h1>No Data</h1>
                        }
                        else
                        {
                            <div class="active-member">
                                <div class="table-responsive">
                                    <table class="table table-xs mb-0">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>Fullname</th>
                                                <th>Description</th>
                                                <th>Total</th>
                                                <th>Created Date</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var transactions in (List<Budget_Project.Models.Transaction>)ViewBag.transactions)
                                            {
                                                <tr>
                                                    <td>@transactions.Id</td>
                                                    <td>@transactions.Name</td>
                                                    <td>@transactions.Description</td>
                                                    <td>@String.Format("{0:0.00}", transactions.Amount) + @Defaults.MoneyType</td>
                                                    <td>@transactions.CreatedDate</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        }
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- #/ container -->
</div>