@model Budget_Project.Models.User
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content-body">

    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3"></div>
                            <div class="col-lg-6">
                                <h4 class="card-title mb-4">Update Profile</h4>

                                @using (Html.BeginForm("Edit", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {

                                    <div class="basic-form">
                                        <form>
                                            <div class="form-group row">
                                                <label class="col-sm-3 col-form-label">Hesap Adı</label>
                                                <div class="col-sm-9">
                                                    <input type="text" class="form-control" name="FullName" id="FullName" value="@Model.Fullname" placeholder="Kullanıcı Adı">
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-sm-3 col-form-label">Email</label>
                                                <div class="col-sm-9">
                                                    <input type="text" class="form-control" name="Email" id="Email" value="@Model.Email" placeholder="Email">
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-sm-3 col-form-label">Şifre</label>
                                                <div class="col-sm-9">
                                                    <input type="text" class="form-control" name="Password" id="Password" value="@Model.Password" placeholder="Şifre">
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-sm-3 col-form-label">Profil Fotoğrafı</label>
                                                <div class="col-sm-9">
                                                    @if (Model.ProfileImage != null)
                                                    {
                                                        <img src="~/Assets/images/user/@Model.ProfileImage" style="width:70px" class="img-circle" />
                                                    }
                                                    <input type="file" name="LogoPath" id="LogoPath" class="form-control"><br />
                                                </div>
                                            </div>

                                            <div class="form-group row">
                                                <div class="col-sm-10">
                                                    <button type="submit" class="btn btn-dark">Update</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>

                                }

                            </div>
                        </div>
                        <div class="col-lg-3"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


